<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/nav_header_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/nav_header_border"
    android:padding="20dp"
    android:elevation="8dp"
    android:clipToOutline="true"
    android:outlineProvider="background">


    <!-- App/User Avatar with Black Circle Background -->
    <FrameLayout
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp">

        <!-- Black Circle at the back -->
        <View
            android:id="@+id/navHeaderCircle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/circle_background" />

        <!-- Logo centered on top of the circle - Z-order changed by moving after the circle -->
        <ImageView
            android:id="@+id/navHeaderAvatar"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:background="@android:color/transparent"
            android:contentDescription="App Icon"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_launcher_round"
            android:elevation="8dp" /> <!-- Added higher elevation to appear above the circle -->

    </FrameLayout>

    <!-- App Name and Settings Icon Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/navHeaderAppName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="LIMO Dashboard"
            android:textColor="#800000"
            android:textSize="22sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- User Info Section -->

    <!-- Divider -->
    <TextView
        android:id="@+id/navHeaderSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2dp"
        android:text="account."
        android:textStyle="bold"
        android:textColor="#000000"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#800000"
        android:alpha="0.2"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp" />

    <!-- Biometric Setup Button -->
    <Button
        android:id="@+id/biometricSetupButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Up Biometric"
        android:textColor="@android:color/white"
        android:background="#800000"
        android:drawableStart="@android:drawable/ic_lock_lock"
        android:drawablePadding="8dp"
        android:gravity="center_vertical"
        android:elevation="2dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        android:padding="12dp" />

    <!-- Logout Button -->
    <Button
        android:id="@+id/logoutButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:textColor="@android:color/white"
        android:background="#FFA500"
        android:elevation="2dp"
        android:layout_marginBottom="8dp"
        android:padding="12dp" />

</LinearLayout>