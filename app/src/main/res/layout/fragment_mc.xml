<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#800000"
    android:visibility="visible"
    android:elevation="10dp">

    <!-- Top Orange Bar -->
    <View
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFA500"
        android:elevation="11dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIMO-SAFE"
        android:textColor="#800000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:elevation="12dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/topBar"
        app:layout_constraintBottom_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bottom Orange Bar -->
    <View
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FFA500"
        android:elevation="11dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginHorizontal="32dp"
        android:padding="24dp"
        android:background="@drawable/rounded_corner_bg"
        android:layout_marginVertical="16dp"
        android:elevation="11dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LIMO\nGenerator"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textStyle="bold"
            android:elevation="12dp"
            android:visibility="visible"
            android:gravity="center" />

        <TextView
            android:id="@+id/generatedCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Generated Code:"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:elevation="12dp"
            android:visibility="visible"
            android:gravity="center" />

        <TextView
            android:id="@+id/codeDisplayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:text="- - - - -"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:elevation="12dp"
            android:visibility="visible"
            android:gravity="center" />

        <Button
            android:id="@+id/generateCodeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@drawable/button_bg"
            android:padding="16dp"
            android:text="GENERATE CODE"
            android:elevation="12dp"
            android:visibility="visible"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/checkMonitoringButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_bg"
            android:padding="16dp"
            android:text="CHECK MONITORING"
            android:elevation="12dp"
            android:visibility="visible"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/exitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_bg"
            android:padding="16dp"
            android:text="EXIT"
            android:elevation="12dp"
            android:visibility="visible"
            android:textColor="@android:color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>