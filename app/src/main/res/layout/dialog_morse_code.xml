<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/dialog_background">

    <!-- Title -->
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/maroon"
        android:gravity="center"
        android:padding="12dp"
        android:text="Play Morse Code"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />
        
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">


    <TextView
        android:id="@+id/codeDisplayText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/maroon"
        android:layout_marginBottom="24dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Align first your phone flashlight to the Sensor of your LIMO-Safe while transmitting data. Thank you"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/maroon"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/triesText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/maroon" />

    <TextView
        android:id="@+id/cooldownText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@color/orange"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLAY MORSE CODE"
        android:backgroundTint="@color/maroon"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="1dp"/>

    <Button
        android:id="@+id/closeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CLOSE"
        android:backgroundTint="@color/orange"
        android:textColor="@android:color/white"/>
    </LinearLayout>

</LinearLayout>